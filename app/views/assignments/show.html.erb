<div class="row">
  <div class="large-12 columns panel">
    <h4><%= @assignment.title %></h4>
    <h4 class="subheader"><%= @assignment.summary %></h4>
    <p><%= @assignment.instructions %></p>
  </div>
</div>
<%- if user_signed_in? -%>
  <%- unless @coursework.completed? %>
    <div class="row">
      <div class="large-2 large-offset-10 columns panel">
        <%= simple_form_for([current_user, @coursework]) do |f| %>
          <%= f.hidden_field :completed, value: true %>
          <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>
          <%= f.submit "Done", class: "button success" %>
        <%- end -%>
      </div>
    </div>
  <%- end -%>
<%- end -%>
<div class="row">
  <div class="large-2 columns panel">
    <%= link_to("Back to lesson", lesson_path(@lesson), class: "button") %>
  </div>
</div>
